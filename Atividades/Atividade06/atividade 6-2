#include<stdio.h>
#include<locale.h>

int main()
{
 setlocale(LC_ALL,"Portuguese");	
 char nome[30];
 char telefone[100];
 int i;
 

 printf("Entre com o nome e telefone do 1o contato (Nome - telefone): ");
 scanf("%s - %s", &nome,&telefone);


 for(i=1; i<10; i++)
 {
 printf("\nEntre com o nome e telefone do %do contato (Nome - telefone): ",i+1);
 scanf("%i", &nome,&telefone);
 }
 
 printf("\n %s - %s", &nome,&telefone);
 
 
}